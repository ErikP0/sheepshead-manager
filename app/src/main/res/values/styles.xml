<resources>

    <style name="SheepsheadText" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_main_texts</item>
        <item name="android:autoLink">none</item>
        <item name="android:textSize">@dimen/sheepshead_text_size_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SheepsheadText.Big">
        <!-- inherits from SheepsheadText -->
        <item name="android:textSize">@dimen/sheepshead_text_size_big</item>
    </style>

    <style name="SheepsheadText.Small">
        <!-- inherits from SheepsheadText -->
        <item name="android:textSize">@dimen/sheepshead_text_size_small</item>
    </style>

    <style name="SheepsheadText.Title">
        <!-- inherits from SheepdheadText -->
        <item name="android:textColor">@color/color_title_texts</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SheepsheadText.Title.Big">
        <!-- inherits from SheepsheadText.Title -->
        <item name="android:textSize">@dimen/sheepshead_text_size_big</item>
    </style>

    <style name="SheepsheadText.Title.Small">
        <!-- inherits from SheepsheadText.Title -->
        <item name="android:textSize">@dimen/sheepshead_text_size_small</item>
    </style>

    <style name="SheepsheadAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>

</resources>
